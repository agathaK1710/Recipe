<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHat"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="@dimen/margin_start_end"
        android:src="@drawable/chef_hat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/medium_blue" />

    <TextView
        android:id="@+id/tvLogin"
        style="@style/MyTextView"
        android:layout_marginBottom="40dp"
        android:text="@string/log_in"
        android:textColor="@color/dark_grey"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHat"
        app:layout_constraintEnd_toEndOf="@+id/ivHat"
        app:layout_constraintStart_toStartOf="@+id/ivHat"
        app:layout_constraintTop_toTopOf="@+id/ivHat" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfEmail"
        style="@style/TextInputLayout"
        android:layout_marginTop="50dp"
        android:hint="@string/email"
        app:boxStrokeColor="@color/medium_blue"
        app:boxStrokeErrorColor="@color/red"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHat"
        app:startIconDrawable="@drawable/email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/lato_light"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfPassword"
        style="@style/TextInputLayout"
        android:hint="@string/password"
        app:boxStrokeColor="@color/medium_blue"
        app:boxStrokeErrorColor="@color/red"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfEmail"
        app:passwordToggleContentDescription="password"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/lato_light"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/turquoise"
        android:fontFamily="@font/lato_light"
        android:text="@string/sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfPassword" />

    <TextView
        android:id="@+id/tvNotAccount"
        style="@style/MyTextView"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:text="@string/i_don_t_have_an_account"
        android:textColor="@color/medium_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>